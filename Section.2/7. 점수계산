package main;

import java.util.*;

class Main {


    public static void main(String[] args) {

        Scanner sh = new Scanner(System.in);
        int num = sh.nextInt();

        int[] arr = new int[num];
        for (int i = 0; i < arr.length; i++) {
            arr[i] = Integer.parseInt(sh.next());
        }
        // 출력할 값과 더해주는값 선언
        int score = 0;
        int sco = 0;
        for(int i = 0; i<arr.length;i++) {
            // 만약 arr[i] = 1 이면 출력값에 1씩 더해지고 아니면 0으로 초기화
            if (arr[i] == 1) {
                sco += 1;
                score += sco;

            } else  {
                sco = 0;


            }

        }
        System.out.println(score);



        }


    }
